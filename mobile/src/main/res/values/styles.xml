<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ProfAppTheme.Base" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/profColorPrimary</item>
        <item name="colorPrimaryDark">@color/profColorPrimaryDark</item>
        <item name="colorAccent">@color/profColorAccent</item>
    </style>


    <style name="SansSouciTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SansSouciTextAppearance</item>
    </style>

    <style name="SansSouciTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

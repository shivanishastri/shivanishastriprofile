<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="professional" type="main.blogspot.souci.sans.chimney.me.com.sanssouci.professional.model.ProfessionalSnapshotModel"/>
    </data>

    <!--Put Tab Layout here and add 3 fragments in each of the tabs. Each tab will have a common model, ProfessionalSnapshotModel -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{professional.firstName}"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{professional.lastName}"/>
    </LinearLayout>
</layout>